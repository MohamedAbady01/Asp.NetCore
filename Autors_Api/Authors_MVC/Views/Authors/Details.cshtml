@model Authors_MVC.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Author Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="EditAuthor">Edit Author</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
